---
import footerData from '../content/footer.json';
import settings from '../content/settings.json';

const currentYear = new Date().getFullYear();

const navLinks = [
  { label: "Services", href: "#services" },
  { label: "About", href: "#about" },
  { label: "FAQ", href: "#faq" },
  { label: "Contact", href: "#contact" },
];
---

<footer class="bg-cream text-dark">
  <div class="max-w-7xl mx-auto px-6 py-16">
    <div class="grid md:grid-cols-3 gap-12 md:gap-8">
      <!-- Brand Column -->
      <div class="text-center md:text-left">
        <div class="mb-6 flex justify-center md:justify-start">
          <img
            src="/images/logo.svg"
            alt="Marinela Bendz"
            class="h-14 w-auto"
          />
        </div>
        <p class="text-dark/60 text-sm leading-relaxed mb-6">
          {footerData.brandDescription}
        </p>
        <p class="text-secondary text-sm">
          {footerData.tagline}
        </p>
      </div>

      <!-- Navigation Column -->
      <div class="text-center md:text-left">
        <h4 class="text-dark text-sm font-medium tracking-wide mb-6">Quick Links</h4>
        <nav class="space-y-3">
          {navLinks.map(link => (
            <a
              href={link.href}
              class="block text-dark/60 hover:text-secondary transition-colors text-sm py-1"
            >
              {link.label}
            </a>
          ))}
        </nav>
      </div>

      <!-- Contact Column -->
      <div class="text-center md:text-left">
        <h4 class="text-dark text-sm font-medium tracking-wide mb-6">Get In Touch</h4>
        <div class="space-y-4">
          <a
            href={`mailto:${settings.contactEmail}`}
            class="flex items-center justify-center md:justify-start gap-3 text-dark/60 hover:text-secondary transition-colors text-sm py-1"
          >
            <svg class="w-5 h-5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
            </svg>
            {settings.contactEmail}
          </a>
          <div class="flex items-center justify-center md:justify-start gap-3 text-dark/60 text-sm py-1">
            <svg class="w-5 h-5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
            </svg>
            {footerData.location}
          </div>
        </div>

        <!-- Social Links -->
        <div class="flex justify-center md:justify-start gap-4 mt-6">
          <a href={footerData.linkedinUrl} class="text-dark/40 hover:text-secondary transition-colors p-2" aria-label="LinkedIn">
            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
              <path d="M19 0h-14c-2.761 0-5 2.239-5 5v14c0 2.761 2.239 5 5 5h14c2.762 0 5-2.239 5-5v-14c0-2.761-2.238-5-5-5zm-11 19h-3v-11h3v11zm-1.5-12.268c-.966 0-1.75-.79-1.75-1.764s.784-1.764 1.75-1.764 1.75.79 1.75 1.764-.783 1.764-1.75 1.764zm13.5 12.268h-3v-5.604c0-3.368-4-3.113-4 0v5.604h-3v-11h3v1.765c1.396-2.586 7-2.777 7 2.476v6.759z"/>
            </svg>
          </a>
          <a href={footerData.instagramUrl} class="text-dark/40 hover:text-secondary transition-colors p-2" aria-label="Instagram">
            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
              <path d="M12 2.163c3.204 0 3.584.012 4.85.07 3.252.148 4.771 1.691 4.919 4.919.058 1.265.069 1.645.069 4.849 0 3.205-.012 3.584-.069 4.849-.149 3.225-1.664 4.771-4.919 4.919-1.266.058-1.644.07-4.85.07-3.204 0-3.584-.012-4.849-.07-3.26-.149-4.771-1.699-4.919-4.92-.058-1.265-.07-1.644-.07-4.849 0-3.204.013-3.583.07-4.849.149-3.227 1.664-4.771 4.919-4.919 1.266-.057 1.645-.069 4.849-.069zm0-2.163c-3.259 0-3.667.014-4.947.072-4.358.2-6.78 2.618-6.98 6.98-.059 1.281-.073 1.689-.073 4.948 0 3.259.014 3.668.072 4.948.2 4.358 2.618 6.78 6.98 6.98 1.281.058 1.689.072 4.948.072 3.259 0 3.668-.014 4.948-.072 4.354-.2 6.782-2.618 6.979-6.98.059-1.28.073-1.689.073-4.948 0-3.259-.014-3.667-.072-4.947-.196-4.354-2.617-6.78-6.979-6.98-1.281-.059-1.69-.073-4.949-.073zm0 5.838c-3.403 0-6.162 2.759-6.162 6.162s2.759 6.163 6.162 6.163 6.162-2.759 6.162-6.163c0-3.403-2.759-6.162-6.162-6.162zm0 10.162c-2.209 0-4-1.79-4-4 0-2.209 1.791-4 4-4s4 1.791 4 4c0 2.21-1.791 4-4 4zm6.406-11.845c-.796 0-1.441.645-1.441 1.44s.645 1.44 1.441 1.44c.795 0 1.439-.645 1.439-1.44s-.644-1.44-1.439-1.44z"/>
            </svg>
          </a>
        </div>
      </div>
    </div>

    <!-- Bottom Bar -->
    <div class="border-t border-dark/10 mt-12 pt-8 flex flex-col md:flex-row justify-between items-center gap-4">
      <p class="text-dark/40 text-sm text-center md:text-left">
        &copy; {currentYear} Marinela Bendz. All rights reserved.
      </p>
    </div>
  </div>
</footer>

<style>
  .bg-cream {
    background-color: var(--color-background);
  }
  .text-dark {
    color: var(--color-text);
  }
  .text-dark\/60 {
    color: color-mix(in srgb, var(--color-text) 60%, transparent);
  }
  .text-dark\/40 {
    color: color-mix(in srgb, var(--color-text) 40%, transparent);
  }
  .border-dark\/10 {
    border-color: color-mix(in srgb, var(--color-text) 10%, transparent);
  }
  .text-secondary {
    color: var(--color-secondary);
  }
  .hover\:text-secondary:hover {
    color: var(--color-secondary);
  }
</style>
