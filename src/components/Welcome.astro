---
/**
 * Welcome Component - Framer-style parallax intro
 * Three-column layout with animated floating images on sides
 * Images animate in on scroll using Intersection Observer
 */
import data from '../content/welcome.json';
import settings from '../content/settings.json';

const leftImages = data.galleryImages.slice(0, 2);
const rightImages = data.galleryImages.slice(2, 5);
---

<section id="welcome" class="welcome-section bg-background">
  <!-- Left Floating Images (Desktop only) -->
  <div class="floating-images floating-images-left">
    {leftImages.map((img, i) => (
      <Fragment>
        {i > 0 && <div class="spacer-large"></div>}
        <div class={`floating-image floating-image-${i + 1}`}>
          <img
            src={img.src}
            alt={img.alt}
            class="w-full h-auto"
            loading="lazy"
          />
        </div>
      </Fragment>
    ))}
  </div>

  <!-- Center Content -->
  <div class="welcome-content">
    <!-- Logo -->
    <div class="flex justify-center mb-8">
      <img
        src={settings.logoUrl}
        alt="Marinela Bendz"
        class="h-24 w-auto"
      />
    </div>

    <!-- Welcome Text -->
    <p class="welcome-label" style="font-family: var(--font-sans);">
      {data.label}
    </p>

    <!-- Headline -->
    <h2 class="welcome-headline" set:html={data.headline} />

    <!-- Tagline -->
    <p class="welcome-tagline">
      {data.tagline}
    </p>

    <!-- Body Paragraphs -->
    <div class="welcome-body">
      {data.bodyParagraphs.map((paragraph) => (
        <p>{paragraph}</p>
      ))}
    </div>

    <!-- Warmest regards -->
    <p class="welcome-regards">
      {data.signOff}
    </p>

    <!-- Portrait -->
    <div class="welcome-portrait">
      <img
        src={data.portraitImage}
        alt={data.name}
        class="w-40 h-40 object-cover rounded-sm mx-auto"
      />
    </div>

    <!-- Signature -->
    <div class="welcome-signature">
      <img
        src={data.signatureImage}
        alt={`${data.name} signature`}
        class="signature-img"
      />
    </div>

    <!-- Name -->
    <p class="welcome-name">{data.name}</p>
    <p class="welcome-title" style="font-family: var(--font-sans);">{data.title}</p>
  </div>

  <!-- Right Floating Images (Desktop only) -->
  <div class="floating-images floating-images-right">
    {rightImages.map((img, i) => (
      <Fragment>
        {i > 0 && <div class={i === 1 ? "spacer-large" : "spacer-medium"}></div>}
        <div class={`floating-image floating-image-${i + 3}`}>
          <img
            src={img.src}
            alt={img.alt}
            class="w-full h-auto"
            loading="lazy"
          />
        </div>
      </Fragment>
    ))}
  </div>
</section>

<!-- Intersection Observer Script for Scroll Animations -->
<script>
  document.addEventListener('DOMContentLoaded', () => {
    const floatingImages = document.querySelectorAll('.floating-image');

    const observerOptions = {
      root: null,
      rootMargin: '0px 0px -10% 0px',
      threshold: 0.1
    };

    const observer = new IntersectionObserver((entries) => {
      entries.forEach(entry => {
        if (entry.isIntersecting) {
          entry.target.classList.add('visible');
        } else {
          entry.target.classList.remove('visible');
        }
      });
    }, observerOptions);

    floatingImages.forEach(img => {
      observer.observe(img);
    });
  });
</script>

<style>
  .bg-background {
    background-color: var(--color-background);
  }

  .welcome-section {
    display: grid;
    grid-template-columns: 1fr;
    gap: 2rem;
    padding: 6rem 1.5rem;
    position: relative;
    overflow: hidden;
  }

  @media (min-width: 1280px) {
    .welcome-section {
      grid-template-columns: 1fr minmax(auto, 600px) 1fr;
      gap: 4rem;
      padding: 8rem 3rem;
      min-height: auto;
    }
  }

  .floating-images {
    display: none;
    flex-direction: column;
    gap: 0;
    padding-top: 2rem;
  }

  @media (min-width: 1280px) {
    .floating-images {
      display: flex;
    }
  }

  .floating-images-left {
    align-items: flex-end;
    padding-right: 2rem;
  }

  .floating-images-right {
    align-items: flex-start;
    padding-left: 2rem;
  }

  .spacer-medium {
    height: 200px;
  }

  .spacer-large {
    height: 400px;
  }

  .floating-image {
    opacity: 0;
    transform: translateY(60px);
    transition: opacity 0.8s cubic-bezier(0.16, 1, 0.3, 1),
                transform 0.8s cubic-bezier(0.16, 1, 0.3, 1);
  }

  .floating-image.visible {
    opacity: 1;
    transform: translateY(0);
  }

  .floating-image-1 {
    width: 280px;
    height: 380px;
    transition-delay: 0s;
  }

  .floating-image-2 {
    width: 260px;
    height: 340px;
    transition-delay: 0.1s;
  }

  .floating-image-3 {
    width: 240px;
    height: 320px;
    transition-delay: 0.05s;
  }

  .floating-image-4 {
    width: 270px;
    height: 360px;
    transition-delay: 0.15s;
  }

  .floating-image-5 {
    width: 250px;
    height: 330px;
    transition-delay: 0.2s;
  }

  .floating-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    display: block;
  }

  .welcome-content {
    text-align: center;
    max-width: 600px;
    margin: 0 auto;
    padding: 0 1.5rem;
  }

  @media (min-width: 768px) {
    .welcome-content {
      padding: 0 2rem;
    }
  }

  .welcome-label {
    font-size: 0.875rem;
    letter-spacing: 0.08em;
    color: var(--color-text);
    margin-bottom: 2rem;
    text-transform: uppercase;
  }

  .welcome-headline {
    font-family: var(--font-serif);
    font-size: 2.25rem;
    font-weight: 400;
    line-height: 1.2;
    color: var(--color-text);
    margin-bottom: 1.5rem;
  }

  @media (min-width: 768px) {
    .welcome-headline {
      font-size: 3rem;
    }
  }

  @media (min-width: 1024px) {
    .welcome-headline {
      font-size: 3.5rem;
    }
  }

  .welcome-tagline {
    font-style: italic;
    color: var(--color-text-muted);
    margin-bottom: 3.5rem;
    font-size: 1.125rem;
  }

  .welcome-body {
    display: flex;
    flex-direction: column;
    gap: 1.75rem;
    margin-bottom: 3.5rem;
  }

  .welcome-body p {
    color: var(--color-text);
    line-height: 1.8;
    font-size: 1rem;
  }

  .welcome-regards {
    color: var(--color-text-muted);
    margin-bottom: 2rem;
    font-style: italic;
  }

  .welcome-portrait {
    margin-bottom: 1.5rem;
  }

  .welcome-signature {
    display: flex;
    justify-content: center;
    margin-bottom: 1rem;
  }

  .signature-img {
    width: 150px;
    height: auto;
    opacity: 0.85;
  }

  .welcome-name {
    font-family: var(--font-serif);
    font-size: 1.5rem;
    color: var(--color-text);
    margin-bottom: 0.25rem;
  }

  .welcome-title {
    font-size: 0.875rem;
    color: var(--color-text-muted);
    letter-spacing: 0.08em;
    text-transform: uppercase;
  }

  @media (prefers-reduced-motion: reduce) {
    .floating-image {
      opacity: 1;
      transform: none;
      transition: none;
    }
  }
</style>
