---
interface Props {
  headline?: string;
  body?: string[];
}

const {
  headline = "About Marinela",
  body = [
    "With a Scandinavian background and years of experience in Barcelona's luxury real estate market, I bring a unique combination of meticulous attention to detail and deep local knowledge to every client relationship.",
    "I work exclusively for buyers — never sellers — which means my only goal is to find you the perfect property at the best possible price. No conflicts of interest, no hidden agendas.",
    "My fixed fee structure ensures complete transparency. Whether you're buying a €1M apartment or a €10M villa, the fee remains the same. This means my advice is always in your best interest, not influenced by commission percentages."
  ]
} = Astro.props;
---

<section id="about" class="section-padding bg-background">
  <div class="max-w-7xl mx-auto">
    <div class="grid lg:grid-cols-2 gap-12 lg:gap-20 items-center">
      <!-- Image Column -->
      <div class="relative">
        <div class="relative z-10">
          <img
            src="/images/marinela-portrait.png"
            alt="Marinela Bendz - Property Hunter"
            class="w-full max-w-md mx-auto lg:mx-0 rounded-sm shadow-lg"
          />
        </div>
        <!-- Decorative elements -->
        <div class="absolute -bottom-4 -right-4 w-full h-full border border-secondary/30 rounded-sm -z-10 hidden lg:block"></div>

        <!-- Signature text (elegant script) -->
        <div class="mt-8 text-center lg:text-left">
          <p class="font-script text-2xl text-secondary/70 italic">Marinela Bendz</p>
        </div>
      </div>

      <!-- Content Column -->
      <div>
        <!-- Section Label -->
        <div class="flex items-center gap-4 mb-6">
          <span class="text-secondary text-sm tracking-widest uppercase">About</span>
          <div class="w-16 h-px bg-secondary/30"></div>
        </div>

        <!-- Headline -->
        <h2 class="text-3xl md:text-4xl text-text mb-8">
          {headline}
        </h2>

        <!-- Body paragraphs -->
        <div class="space-y-6">
          {body.map(paragraph => (
            <p class="text-text-muted leading-relaxed">
              {paragraph}
            </p>
          ))}
        </div>

        <!-- Key points -->
        <div class="grid sm:grid-cols-2 gap-6 mt-10 pt-10 border-t border-gray-100">
          <div>
            <div class="flex items-center gap-3 mb-2">
              <svg class="w-5 h-5 text-secondary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
              </svg>
              <span class="font-medium text-text">Buyer Exclusive</span>
            </div>
            <p class="text-sm text-text-muted">I never work for sellers — my loyalty is 100% with you.</p>
          </div>

          <div>
            <div class="flex items-center gap-3 mb-2">
              <svg class="w-5 h-5 text-secondary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
              </svg>
              <span class="font-medium text-text">Fixed Fee</span>
            </div>
            <p class="text-sm text-text-muted">€11,000 regardless of property price — complete transparency.</p>
          </div>

          <div>
            <div class="flex items-center gap-3 mb-2">
              <svg class="w-5 h-5 text-secondary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M3.055 11H5a2 2 0 012 2v1a2 2 0 002 2 2 2 0 012 2v2.945M8 3.935V5.5A2.5 2.5 0 0010.5 8h.5a2 2 0 012 2 2 2 0 104 0 2 2 0 012-2h1.064M15 20.488V18a2 2 0 012-2h3.064M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
              </svg>
              <span class="font-medium text-text">Local Expertise</span>
            </div>
            <p class="text-sm text-text-muted">Deep knowledge of Barcelona's neighbourhoods and market.</p>
          </div>

          <div>
            <div class="flex items-center gap-3 mb-2">
              <svg class="w-5 h-5 text-secondary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2m-6 9l2 2 4-4" />
              </svg>
              <span class="font-medium text-text">Full Service</span>
            </div>
            <p class="text-sm text-text-muted">From search to keys — I handle everything.</p>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<style>
  .bg-background {
    background-color: var(--color-background);
  }
  .bg-secondary\/30 {
    background-color: rgba(196, 169, 106, 0.3);
  }
  .border-secondary\/30 {
    border-color: rgba(196, 169, 106, 0.3);
  }
  .text-secondary {
    color: var(--color-secondary);
  }
  .text-text {
    color: var(--color-text);
  }
  .text-text-muted {
    color: var(--color-text-muted);
  }
</style>
