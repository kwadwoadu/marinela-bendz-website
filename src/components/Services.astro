---
import sectionData from '../content/services-section.json';

const serviceModules = import.meta.glob('../content/services/*.json', { eager: true });
const services = Object.values(serviceModules)
  .map((mod: any) => mod.default || mod)
  .sort((a, b) => a.order - b.order);
---

<section id="services" class="section-padding bg-background-alt">
  <div class="max-w-7xl mx-auto">
    <!-- Section Header -->
    <div class="text-center mb-16 scroll-animate">
      <div class="flex items-center justify-center gap-4 mb-6">
        <div class="w-16 h-px bg-secondary/30"></div>
        <span class="text-secondary text-sm tracking-widest uppercase">{sectionData.sectionLabel}</span>
        <div class="w-16 h-px bg-secondary/30"></div>
      </div>
      <h2 class="text-3xl md:text-4xl text-text">{sectionData.sectionHeadline}</h2>
    </div>

    <!-- Services Grid -->
    <div class="grid lg:grid-cols-2 gap-8 lg:gap-12">
      {services.map((service, index) => (
        <div class={`bg-white rounded-sm shadow-sm overflow-hidden group flex flex-col card-hover scroll-animate-scale`} style={`transition-delay: ${index * 0.15}s`}>
          <!-- Image -->
          <div class="relative h-64 overflow-hidden">
            <img
              src={service.image}
              alt={service.title}
              class="w-full h-full object-cover transition-transform duration-500 group-hover:scale-105"
            />
            <div class="absolute inset-0 bg-gradient-to-t from-primary/60 to-transparent"></div>
            <div class="absolute bottom-6 left-6 right-6">
              <h3 class="text-2xl text-white mb-1">{service.title}</h3>
              <p class="text-white/80 text-sm">{service.subtitle}</p>
            </div>
          </div>

          <!-- Content -->
          <div class="p-8 flex flex-col flex-grow">
            <p class="text-text-muted mb-6 leading-relaxed">
              {service.description}
            </p>

            <!-- Features List -->
            <ul class="space-y-3 mb-8">
              {service.features.map(feature => (
                <li class="flex items-start gap-3">
                  <svg class="w-5 h-5 text-secondary flex-shrink-0 mt-0.5" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
                  </svg>
                  <span class="text-text-muted text-sm">{feature}</span>
                </li>
              ))}
            </ul>

            <!-- Pricing - Push to bottom with mt-auto -->
            <div class="border-t border-gray-100 pt-6 flex items-center justify-between mt-auto">
              <div>
                <div class="text-2xl font-serif text-secondary">{service.price}</div>
                <div class="text-xs text-text-muted">{service.priceNote}</div>
              </div>
              <a href="#contact" class="btn-primary">
                {service.ctaLabel}
              </a>
            </div>
          </div>
        </div>
      ))}
    </div>

    <!-- Bottom CTA -->
    <div class="text-center mt-16 scroll-animate">
      <p class="text-text-muted mb-6">
        {sectionData.bottomCtaText}
      </p>
      <a href="#contact" class="btn-outline inline-block">
        {sectionData.bottomCtaLabel}
      </a>
    </div>
  </div>
</section>

<style>
  .bg-background-alt {
    background-color: var(--color-background-alt);
  }
  .bg-secondary\/30 {
    background-color: rgba(196, 169, 106, 0.3);
  }
  .text-secondary {
    color: var(--color-secondary);
  }
  .text-text {
    color: var(--color-text);
  }
  .text-text-muted {
    color: var(--color-text-muted);
  }
  .bg-primary\/60 {
    background-color: rgba(45, 74, 94, 0.6);
  }
</style>
